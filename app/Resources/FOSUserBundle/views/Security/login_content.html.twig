{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger">
        <ul>
            <li>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </li>
        </ul>
    </div>
{% endif %}

<div class="well center-block form-authorization">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="form-group">
            <input
                class="form-control"
                type="email"
                id="username"
                name="_username"
                value="{{ last_username }}"
                required="required"
                placeholder="{{ 'profile.show.email'|trans }}"
            />
        </div>

        <div class="form-group">
            <input
                class="form-control"
                type="password"
                id="password"
                name="_password"
                required="required"
                placeholder="{{ 'security.login.password'|trans }}"
            />
        </div>

        <div class="checkbox">
            <label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                {{ 'security.login.remember_me'|trans }}
            </label>
            <p class="pull-right"><a href="{{ path('fos_user_resetting_request') }}">{{ 'fos.login.forgot.password'|trans({}, 'messages')|desc('Forgot password?') }}</a></p>
        </div>

        <div class="form-group">
            <input
                class="btn btn-default btn-block"
                type="submit"
                id="_submit"
                name="_submit"
                value="{{ 'security.login.submit'|trans }}"
            />
        </div>
    </form>
</div>
