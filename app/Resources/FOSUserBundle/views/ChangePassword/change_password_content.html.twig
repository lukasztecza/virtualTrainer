{% trans_default_domain 'FOSUserBundle' %}

{% if form_errors(form.current_password) is not empty or form_errors(form.plainPassword.first) is not empty %}
    <div class="alert alert-danger">
        {{ form_errors(form.current_password) }}
        {{ form_errors(form.plainPassword.first) }}
    </div>
{% endif %}

<div class="well center-block form-authorization">
    {{ form_start(form, {
        'action': path('fos_user_change_password'),
        'attr': { 'class': 'fos_user_change_password' } })
    }}
        <div>
            {{ form_row(form._token) }}
        </div>

        <div class="form-group">
            <input
                class="form-control"
                id="{{ form.current_password.vars.id }}"
                name="{{ form.current_password.vars.full_name }}"
                required="required"
                type="password"
                placeholder="{{ form.current_password.vars.label|trans }}"
            />
        </div>

        <div class="form-group">
            <input
                class="form-control"
                id="{{ form.plainPassword.first.vars.id }}"
                name="{{ form.plainPassword.first.vars.full_name }}"
                required="required"
                type="password"
                placeholder="{{ form.plainPassword.first.vars.label|trans }}"
            />
        </div>

        <div class="form-group">
            <input
                class="form-control"
                id="{{ form.plainPassword.second.vars.id }}"
                name="{{ form.plainPassword.second.vars.full_name }}"
                required="required"
                type="password"
                placeholder="{{ form.plainPassword.second.vars.label|trans }}"
            />
        </div>

        <div class="form-group">
            <input class="btn btn-default btn-block" type="submit" value="{{ 'change_password.submit'|trans }}" />
        </div>
    {{ form_end(form, {'render_rest': false}) }}
</div>
